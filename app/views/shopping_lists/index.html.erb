<%= render 'shared/navigation' %>
    <h1 class= "shopping-list-heading">Shopping List</h1>
      <div class="display"> 
      <% if @total_price == 0 %>
        <p class ="total-amount">List is empty or You have enough food item in your General Food list to make this recipe </p>
        <% else %>
      <p class="total-amount">Amount of food item to buy: $<%= @total_price %></p> <p class="total-amount">Total value of food needed:<%= @total_items %></p>
    </div>
    <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% @shoppinglist.each do |food| %>
        <% unless food[:price].zero? %>
          <tr>
            <th><%= food[:food].name %></th>
            <th><%= food[:quantity] %><%= food[:food].measurement_unit %></th>
            <th>$ <%= food[:price] %></th>
          </tr>
        <% end %>
      <% end %>
    </tbody>
    </table>
    <% end %>